<h1>Burger Heaven</h1>



<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">DEVOURED</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>



<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Hot Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ba">Burger Name:</label>
    <input type="text" id="ba" name="name">
  </div>

  <div class="form-group">
    <label for="de">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Sleepy!<br>
    <input type="radio" name="devoured" value="0"> Awake
  </div>

  <button type="submit">Add Devoured</button>
</form>
